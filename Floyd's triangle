#include <iostream>
using namespace std;
int main()
{
    // Number of rows
    int N;
    cout<<"Enter the value:";
    cin>>N;
    int count = 1; 
    for (int i = 1; i <= N; i++) 
    {
        for (int j = 1; j <= i; j++) 
        {
            cout << count << " ";
 
            count += 1;
        }
        cout << "\n";
    }
    return 0;
}
